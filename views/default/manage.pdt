                        <?php
                        $this->Form->create($this->base_uri . 'settings/company/modules/deleterow/');
                        $this->Form->fieldHidden('id', $module->id);
                        $this->Form->fieldHidden('row_id', $row->id);
                        ?>
                        <a href="<?php echo $this->Html->safe($this->base_uri . 'settings/company/modules/deleterow/' . $module->id . '/' . $row->id);?>" class="manage" rel="<?php echo $this->Html->safe($this->_('Ph24Cloud.manage.delete_row', true));?>"><?php $this->_('Ph24Cloud.manage.delete');?></a>
                        <?php
                        $this->Form->end();
