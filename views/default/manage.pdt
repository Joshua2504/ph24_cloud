                }
                ?>
            </tbody>
        </table>
        <?php
        } else {
        ?>
        <div class="empty_section">
            <div class="empty_box">
                <?php $this->_('Ph24Cloud.manage.no_module_rows');?>
            </div>
        </div>
        <?php
        }
        $this->Widget->end();
        ?>
